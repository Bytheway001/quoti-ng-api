{
    "name": "bytheway001/microfw",
    "description": "Boilerplate to develop php apps easily",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Rafael",
            "email": "Bytheway0708@gmail.com"
        }
    ],

    "minimum-stability": "dev",
    "require": {
        "php-activerecord/php-activerecord": "^1.2",
        "symfony/yaml": "^3.4",
        "mikehaertl/phpwkhtmltopdf": "dev-master",
        "filp/whoops": "^2.1",
        "dannyvankooten/php-router": "dev-master",
        "vlucas/phpdotenv": "5.3.x-dev",
        "firebase/php-jwt": "dev-master",
        "phpmailer/phpmailer": "dev-master",
        "robmorgan/phinx": "dev-master",
        "phpoffice/phpspreadsheet": "dev-master",
        "bshaffer/oauth2-server-php": "^1.10"
    },
    "scripts":{
        "test":"vendor\\bin\\phpunit Tests --testdox -c phpunit.xml",
        "generate":"Core\\bin\\generator generate",
        "create_migration":"vendor\\bin\\phinx create --",
        "migrate_dev":"vendor\\bin\\phinx migrate -e development",
        "migrate":"vendor\\bin\\phinx migrate -e production",
        "rollback_dev":"vendor\\bin\\phinx rollback -e development",
        "rollback":"vendor\\bin\\phinx rollback -e production"
    },
    "autoload": {
        "psr-4": {
            "App\\":"App",
            "Core\\":"Core",
            "Middleware\\":"Middleware"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/Bytheway001/PHP-Router"
        },
        {
            "type":"vcs",
            "url":"https://github.com/Bytheway001/php-activerecord"
        }
    ]
}
